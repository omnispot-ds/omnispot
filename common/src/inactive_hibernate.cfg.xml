<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<!-- PRODUCTION SETTINGS -->
		<property name="connection.datasource">
			java:/comp/env/jdbc/monitorDS
		</property>
		<property name="current_session_context_class">thread</property>
		<!-- EOF PRODUCTION SETTINGS -->

		<!-- DEVELOPMENT SETTINGS 
			<property name="connection.driver_class">
			org.apache.derby.jdbc.ClientDriver
			</property>
			<property name="connection.url">
			jdbc:derby://localhost:1527/c:/dbin/derbydb/data/monitor;create=false;user=monitor;password=monitor
			</property>
			<property name="connection.username">monitor</property>
			<property name="connection.password">monitor</property>
			<property name="connection.pool_size">5</property>
			<property name="current_session_context_class">thread</property>
			EOF DEVELOPMENT SETTINGS -->

		<property name="dialect">
			org.hibernate.dialect.DerbyDialect
		</property>
		<property name="show_sql">false</property>
		<property name="hbm2ddl.auto">none</property>

		<mapping
			resource="com/kesdip/common/domain/AccessControl.hbm.xml" />
		<mapping
			resource="com/kesdip/common/domain/AccessRight.hbm.xml" />
		<mapping resource="com/kesdip/common/domain/Content.hbm.xml" />
		<mapping resource="com/kesdip/common/domain/Customer.hbm.xml" />
		<mapping resource="com/kesdip/common/domain/Deployment.hbm.xml" />
		<mapping
			resource="com/kesdip/common/domain/Installation.hbm.xml" />
		<mapping resource="com/kesdip/common/domain/User.hbm.xml" />
		<mapping resource="com/kesdip/common/domain/Action.hbm.xml" />
		<mapping resource="com/kesdip/common/domain/Parameter.hbm.xml" />
		<mapping resource="com/kesdip/common/domain/StatusEntry.hbm.xml" />
		<mapping resource="com/kesdip/common/domain/Site.hbm.xml" />
		<mapping resource="com/kesdip/common/domain/InstallationGroup.hbm.xml" />
	</session-factory>

</hibernate-configuration>

